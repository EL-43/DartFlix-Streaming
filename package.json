{
  "name": "dartflix-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A streaming platform built with React, Node.js, and MySQL",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd packages/client && npm run dev",
    "dev:server": "cd packages/server && npm run dev",
    "setup-db": "cd packages/server && node src/config/initDatabase.js",
    "install-all": "npm install && cd packages/server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules packages/server/node_modules packages/client/node_modules packages/client/dist",
    "start": "cd packages/server && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "keywords": [
    "streaming",
    "movies",
    "tv-shows",
    "react",
    "nodejs",
    "mysql"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}
